compilation_database_dir: build
output_directory: doc/diagrams
mermaid:
  cmd: "mmdc -i \"doc/diagrams/{}.mmd\" -o \"doc/diagrams/{}.svg\""
diagrams:
  core_class_diagram:
    type: class
    glob:
      - src/**/*.cpp
      - src/**/*.hpp
    include:
      namespaces:
        - Core
  app_root_class_diagram:
    type: class
    glob:
      - src/**/*.cpp
      - src/**/*.hpp
    include:
      namespaces:
        - AppRoot
  monitoring_class_diagram:
    type: class
    glob:
      - src/**/*.cpp
      - src/**/*.hpp
    include:
      namespaces:
        - Monitoring
  dbc_class_diagram:
    type: class
    glob:
      - src/**/*.cpp
      - src/**/*.hpp
    include:
      namespaces:
        - ::DbcFile
  can_handler_class_diagram:
    type: class
    glob:
      - src/**/*.cpp
      - src/**/*.hpp
    include:
      namespaces:
        - CanHandler
  event_broker_class_diagram:
    type: class
    glob:
      - src/**/*.cpp
      - src/**/*.hpp
    include:
      namespaces:
        - EventBroker
  sending_class_diagram:
    type: class
    glob:
      - src/**/*.cpp
      - src/**/*.hpp
    include:
      namespaces:
        - Sending
        - Common
  logging_class_diagram:
    type: class
    glob:
      - src/**/*.cpp
      - src/**/*.hpp
    include:
      namespaces:
        - Logging
        - Common
  overall_class_diagram:
      type: class
      glob:
        - src/**/*.cpp
        - src/**/*.hpp
      using_namespace:
        - CanBusManager
      include:
        namespaces:
          - AppRoot
          - Core
          - Monitoring
          - DbcFile
          - CanHandler
          - EventBroker
          - Sending
          - Logging
          - Common
